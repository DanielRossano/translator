# =================================
# Translation Service Configuration
# =================================

# Node Environment
NODE_ENV=development

# =================================
# API Configuration
# =================================
PORT=3000
API_URL=http://localhost:3000

# =================================
# Database Configuration
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=translation_db

# =================================
# RabbitMQ Configuration
# =================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# =================================
# Google Cloud Translation API
# =================================
# Note: You need to set up Google Cloud Translation API and get credentials
# Visit: https://cloud.google.com/translate/docs/setup

# Option 1: Use service account key file
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/your/service-account-key.json

# Option 2: Use Application Default Credentials (ADC)
# Set GOOGLE_APPLICATION_CREDENTIALS environment variable
# GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# =================================
# Development Tools
# =================================
# Set to true to enable detailed logging
DEBUG=false

# Database logging (TypeORM)
DB_LOGGING=false

# =================================
# Docker Compose Override
# =================================
# These will be set automatically by docker-compose
# DB_HOST=postgres
# RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
